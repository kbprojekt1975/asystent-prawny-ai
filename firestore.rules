rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. User Rules (PRIORITY)
    match /users/{userId} {
      // Allow user to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow user to read/write any subcollection (chats, legal_knowledge, etc.)
      match /{allSubcollections=**} {
        allow read, write, list: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 2. Master Admin check
    function isMasterAdmin() {
      return request.auth != null && (
        request.auth.uid == "Yb23rXe0JdOvieB3grdaN0Brmkjh" ||
        (request.auth.token.email != null && (
          request.auth.token.email.matches(".*kbprojekt1975@gmail.com.*") ||
          request.auth.token.email.matches(".*konrad@example.com.*")
        ))
      );
    }

    // 3. Admin Overrides (for all users)
    match /users/{userId} {
      allow read, write: if isMasterAdmin();
      match /{allSubcollections=**} {
        allow read, write, list: if isMasterAdmin();
      }
    }

    // 4. Config
    match /config/{document=**} {
      allow read: if true;
      allow write: if isMasterAdmin();
    }
    
    // 5. Admins list
    match /admins/{adminId} {
        allow read: if request.auth != null && (request.auth.token.admin == true || isMasterAdmin());
        allow write: if false;
    }
  }
}